<Window x:Class="Client.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Personal Statistics" VerticalAlignment="Center" Margin="50,0,50,0" Click="P_Click"></Button>
            <Button Content="High Scores" VerticalAlignment="Center" Click="H_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
