<Window x:Class="Client.PersonalStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="PersonalStats" Height="450" Width="800">
    <Grid>
        <Button Content="menu" Click="Menu_Click" Width="70" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
        <TextBlock x:Name="Title" HorizontalAlignment="Center" Text="Personal Stats" FontSize="30" TextAlignment="Center" Margin="40"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Games" FontSize="20" TextAlignment="Center" Margin="0,60,0,0"/>
            <TextBlock x:Name="Correct" FontSize="20" TextAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="Incorrect" FontSize="20" TextAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="AvTime" FontSize="20" TextAlignment="Center" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
