<Window x:Class="Client.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <Button Content="Create Room" Click="createRoom_Click" HorizontalAlignment="Center" Margin="0,20,0,0"></Button>
            <Button Content="Join Room" Click="JoinRoom_Click" HorizontalAlignment="Center" Margin="0,20,0,0"></Button>
            <Button Content="Statistics" Click="Statistics_Click" HorizontalAlignment="Center" Margin="0,20,0,0"></Button>
            <Button Content="Exit" Click="Exit_Click" HorizontalAlignment="Center" Margin="0,20,0,0"></Button>

        </StackPanel>
        
    </Grid>
</Window>
